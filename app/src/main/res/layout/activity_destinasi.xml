<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.destinasi.DestinasiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_destinasi_desc"
            android:layout_margin="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:scaleType="centerCrop"
            tools:src="@drawable/monas"/>

        <TextView
            android:id="@+id/txt_title_destinasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Monumen Nasional (Monas)"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:textSize="@dimen/_15ssp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/txt_alamat_destinasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/monas_alamat"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="serif"
            android:textColor="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/txt_desc_destinasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/monas_desc"
            android:layout_margin="@dimen/_20sdp"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="serif"
            android:textColor="@android:color/darker_gray"/>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>