<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:elevation="@dimen/_3sdp"
    app:cardCornerRadius="@dimen/_10sdp">

    <RelativeLayout
        android:id="@+id/rl_trans"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@android:color/holo_red_light">

        <FrameLayout
            android:id="@+id/frameimg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp">

            <ImageView
                android:id="@+id/img_mobil_trans"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/new_avanza" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/frameimg"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_nama_mobil_trans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                tools:text="Toyota Avanza" />

            <TextView
                android:id="@+id/txt_tipe_mobil_trans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_8ssp"
                android:textStyle="normal"
                tools:text="(Tipe xxx)" />

            <TextView
                android:id="@+id/txt_tipe_trans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="serif"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_10ssp"
                android:textStyle="normal"
                tools:text="Mobil dan supir" />

            <TextView
                android:id="@+id/txt_harga_trans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                tools:text="Rp500.000" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_status_trans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_tanggal_trans"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="serif"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"
            tools:text="Belum Lunas" />

        <TextView
            android:id="@+id/txt_tanggal_trans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/frameimg"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="serif"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10ssp"
            android:textStyle="normal"
            tools:text="1 hari yang lalu" />

        <Button
            android:id="@+id/btn_lihat_detail"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_below="@id/txt_status_trans"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/bg_btn_detail"
            android:drawableStart="@drawable/ic_baseline_zoom_in_24"
            android:fontFamily="serif"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:text="Lihat Detail"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>